<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="zh-CN" x-cloak>
<%- include('partials/head') %>
<body>
  <%- include('partials/nav') %>

  <main class="container">
    <div class="hero text-center">
      <h1 class="hero-title">订阅链接管理平台</h1>
      <p class="hero-subtitle">快速生成 Clash 和 V2Ray 客户端订阅链接，支持多协议混合订阅</p>
    </div>

    <div class="grid-cols-2">
      <div class="card">
        <div class="card-header">
          <i class="card-icon bg-blue"></i>
          <h3 class="card-title">Clash 订阅链接</h3>
        </div>
        <div x-clipboard class="input-group">
          <input 
            type="text" 
            value="<%= clashUrl %>" 
            readonly
            class="input-field"
          >
          <button @click="copy($clipboard)" class="copy-btn">
            <i class="fas fa-copy"></i>
          </button>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <i class="card-icon bg-purple"></i>
          <h3 class="card-title">V2Ray 订阅链接</h3>
        </div>
        <div x-clipboard class="input-group">
          <input 
            type="text" 
            value="<%= v2rayUrl %>" 
            readonly
            class="input-field"
          >
          <button @click="copy($clipboard)" class="copy-btn">
            <i class="fas fa-copy"></i>
          </button>
        </div>
      </div>
    </div>

    <div class="usage-guide">
      <h4>使用方法</h4>
      <ul>
        <li>❶ 复制对应客户端订阅链接</li>
        <li>❷ 在客户端中粘贴并更新</li>
        <li>❸ 选择节点连接使用</li>
      </ul>
    </div>
  </main>
</body>
</html>
