<%- include('layout', { title: '管理员登录', isAdmin: false }) %>

<article>
  <h2>管理员登录</h2>
  <% if (error) { %>
    <div role="alert" style="colordc2626; margin-bottom: 1rem">
      <% switch(error) {
        case 'empty': %>请填写用户名和密码<% break;
        case 'credentials': %>用户名或密码错误<% break;
        case 'unauthorized': %>请先登录<% break;
      } %>
    </div>
  <% } %>

  <form method="post">
    <label>
      用户名
      <input type="text" name="username" required>
    </label>
    
    <label>
      密码
      <input type="password" name="password" required>
    </label>

    <button type="submit" style="margin-top: 1rem">登录</button>
  </form>
</article>
