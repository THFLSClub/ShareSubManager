<!-- views/admin.ejs -->
<!DOCTYPE html>
<html lang="zh-CN" x-data="{ activeTab: 'node' }">
<%- include('partials/head') %>
<body>
  <%- include('partials/nav') %>

  <main class="container">
    <div class="card mb-6">
      <h2 class="text-xl font-semibold mb-4">添加节点</h2>
      <form method="post" action="/add" class="space-y-4">
        <div class="flex gap-2">
          <button 
            type="button"
            @click="activeTab = 'node'"
            class="px-4 py-2 rounded-lg"
            :class="activeTab === 'node' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100'"
          >
            单个节点
          </button>
          <button 
            type="button"
            @click="activeTab = 'sub'"
            class="px-4 py-2 rounded-lg"
            :class="activeTab === 'sub' ? 'bg-blue-100 text-blue-800' : 'bg-gray-100'"
          >
            订阅链接
          </button>
        </div>

        <div x-show="activeTab === 'node'">
          <textarea
            name="content"
            rows="4"
            class="input-field w-full"
            placeholder="请输入节点链接（ss://、vmess:// 等格式）"
          ></textarea>
          <input type="hidden" name="type" value="node">
        </div>

        <div x-show="activeTab === 'sub'">
          <input
            type="url"
            name="content"
            class="input-field w-full"
            placeholder="请输入订阅链接地址"
          >
          <input type="hidden" name="type" value="subscription">
        </div>

        <button type="submit" class="btn btn-primary">添加节点</button>
      </form>
<% if (req.query.error) { %>
<div class="alert-error" style="background: #fee2e2; color: #dc2626; padding: 1rem; border-radius: 8px; margin-bottom: 1rem;">
  <%= req.session.error %>
</div>
<% } %>
<% if (req.query.success) { %>
<div class="alert-success" style="background: #dcfce7; color: #16a34a; padding: 1rem; border-radius: 8px; margin-bottom: 1rem;">
  节点添加成功！
</div>
<% } %>

    </div>

    <div class="card">
      <h2 class="text-xl font-semibold mb-4">节点列表（共 <%= nodes.length %> 个）</h2>
      <div class="overflow-x-auto">
        <table class="node-table">
          <thead>
            <tr>
              <th>类型</th>
              <th>节点信息</th>
              <th>添加时间</th>
            </tr>
          </thead>
          <tbody>
            <% nodes.forEach(node => { 
              const cfg = JSON.parse(node.config) %>
              <tr>
                <td>
                  <span class="node-type <%= node.type %>">
                    <%= node.type.toUpperCase() %>
                  </span>
                </td>
                <td>
                  <div class="node-info">
                    <div class="font-medium"><%= cfg.ps %></div>
                    <div class="text-sm text-gray-500"><%= cfg.add %>:<%= cfg.port %></div>
                  </div>
                </td>
                <td>
                  <%= new Date(node.created_at).toLocaleDateString() %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </main>
</body>
</html>
